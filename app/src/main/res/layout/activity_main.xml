<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ipltd_bg.daisyandroid.MainActivity">

    <GridLayout
        android:layout_width="368dp"
        android:layout_height="624dp"
        android:layout_alignParentBottom="true"
        android:rowCount="14"
        android:columnCount="1"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


        <Button
            android:id="@+id/bConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:layout_column="0"
            android:layout_row="0"/>

        <Button
            android:id="@+id/bSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print status"
            android:layout_column="0"
            android:layout_row="1"/>


        <Button
            android:id="@+id/bGetStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print status"
            android:layout_column="0"
            android:layout_row="2"/>

        <Button
            android:id="@+id/bAddArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Article"
            android:layout_column="0"
            android:layout_row="3"/>

        <Button
            android:id="@+id/bNoFiskSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sale"
            android:layout_column="0"
            android:layout_row="4"/>
        <Button
            android:id="@+id/bCopySale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="copy last"
            android:layout_column="0"
            android:layout_row="5"/>

        <Button
            android:id="@+id/bDaily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily report"
            android:layout_column="0"
            android:layout_row="6"/>

        <Button
            android:id="@+id/bAddArticle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Article 2"
            android:layout_column="0"
            android:layout_row="7"/>

        <Button
            android:id="@+id/bDelArticle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Del Article 2"
            android:layout_column="0"
            android:layout_row="8"/>


        <Button
            android:id="@+id/bNoFisk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No fisk"
            android:layout_column="0"
            android:layout_row="9"/>


        <Button
            android:id="@+id/bSetCompanyData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set data"
            android:layout_column="0"
            android:layout_row="10"/>
        <Button
            android:id="@+id/bConnectNFP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect NFP"
            android:layout_column="0"
            android:layout_row="11"/>
        <Button
            android:id="@+id/bPrintNFP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print NFP"
            android:layout_column="0"
            android:layout_row="12"/>

        <Button
            android:id="@+id/bDiscNFP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DisConnect NFP"
            android:layout_column="0"
            android:layout_row="13"/>
    </GridLayout>


</android.support.constraint.ConstraintLayout>
